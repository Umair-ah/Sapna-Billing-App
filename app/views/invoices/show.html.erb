    <tbody class="bg-white divide-y divide-gray-200">
    <% @invoice.items.each do |item| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap border border-gray-500">
          <div class="field text-sm text-gray-900">
            <%= item.description %>
          </div>
